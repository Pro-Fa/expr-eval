{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Override for production builds
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",

    // Emit Configuration for Production
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "removeComments": true,
    "emitDeclarationOnly": false,
    "stripInternal": true,

    // Optimization
    "noEmit": false,
    "incremental": false,
    "composite": false,

    // Disable testing types for production
    "types": []
  },
  "include": [
    "src/**/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    ".nyc_output",
    "test/**/*",
    "**/*.d.ts"
  ]
}
